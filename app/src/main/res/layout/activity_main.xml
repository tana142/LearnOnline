<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="setevenn"
            type="com.example.setevenwidget.MainActivity" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/edt_nhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhap"
            android:inputType="text"></EditText>

        <Button
            android:id="@+id/btn_hienthi"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hien Thi"
            android:backgroundTint="#F30505"
            android:textAllCaps="false"
            android:onClick="ButtonSetEven"></Button>
        <Spinner
            android:id="@+id/sp_quocgia"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textDirection="locale"></Spinner>
    </LinearLayout>
</layout>
